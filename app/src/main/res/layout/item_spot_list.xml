<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_spot_list_container"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_half">

    <LinearLayout
        android:layout_width="301dp"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/item_spot_list_image_container"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_spot_list_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@android:color/black"
            tools:text="타이틀" />

        <TextView
            android:id="@+id/item_spot_list_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray"
            tools:text="설명" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/item_spot_list_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_spot_list_image_main"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/placeholder"
            app:civ_circle_background_color="@android:color/white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_spot_list_image_sub"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|start"
            android:src="@drawable/placeholder"
            app:civ_circle_background_color="@android:color/white" />
    </FrameLayout>


</RelativeLayout>