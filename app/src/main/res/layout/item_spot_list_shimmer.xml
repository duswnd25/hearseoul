<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_half">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/item_spot_list_image_container"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_spot_list_title"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/padding_half"
            android:layout_marginTop="@dimen/padding_half"
            android:layout_weight="1"
            android:background="@color/shimmer_background_color"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/item_spot_list_description"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/padding_half"
            android:layout_marginTop="@dimen/padding_half"
            android:layout_weight="1"
            android:background="@color/shimmer_background_color"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/item_spot_list_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/item_spot_list_image_main"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/shimmer_background_color" />

        <ImageView
            android:id="@+id/item_spot_list_image_sub"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|start" />
    </FrameLayout>


</RelativeLayout>