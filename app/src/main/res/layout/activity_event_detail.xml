<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/HearSeoulTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/event_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="1"
            app:popupTheme="@style/HearSeoulTheme.PopupOverlay"
            app:title="@string/app_name"
            app:titleTextColor="@android:color/black">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/padding_half"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/event_detail_image"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/event_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#000000"
                android:textSize="16sp"
                app:sizeToFit="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="17dp"
                android:background="#ebecee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:text="@string/event_code"
                        android:textColor="#567ebb"
                        android:textSize="14sp"
                        app:sizeToFit="true" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/event_detail_code_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#565656"
                        android:textSize="14sp"
                        app:sizeToFit="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:text="@string/event_date"
                        android:textColor="#567ebb"
                        android:textSize="14sp"
                        app:sizeToFit="true" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/event_detail_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#565656"
                        android:textSize="14sp"
                        app:sizeToFit="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:text="@string/event_time"
                        android:textColor="#567ebb"
                        android:textSize="14sp"
                        app:sizeToFit="true" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/event_detail_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#565656"
                        android:textSize="14sp"
                        app:sizeToFit="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:text="@string/event_place"
                        android:textColor="#567ebb"
                        android:textSize="14sp"
                        app:sizeToFit="true" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/event_detail_place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#565656"
                        android:textSize="14sp"
                        app:sizeToFit="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:text="@string/event_target"
                        android:textColor="#567ebb"
                        android:textSize="14sp"
                        app:sizeToFit="true" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/event_detail_target"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#565656"
                        android:textSize="14sp"
                        app:sizeToFit="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:text="@string/event_use_fee"
                        android:textColor="#567ebb"
                        android:textSize="14sp"
                        app:sizeToFit="true" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/event_detail_use_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#565656"
                        android:textSize="14sp"
                        app:sizeToFit="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:text="@string/event_sponsor"
                        android:textColor="#567ebb"
                        android:textSize="14sp"
                        app:sizeToFit="true" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/event_detail_sponsor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#565656"
                        android:textSize="14sp"
                        app:sizeToFit="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:text="@string/event_inquiry"
                        android:textColor="#567ebb"
                        android:textSize="14sp"
                        app:sizeToFit="true" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/event_detail__inquiry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#565656"
                        android:textSize="14sp"
                        app:sizeToFit="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:text="@string/event_program"
                        android:textColor="#567ebb"
                        android:textSize="14sp"
                        app:sizeToFit="true" />

                    <TextView
                        android:id="@+id/event_detail_program"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text=""
                        android:textColor="#565656"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/event_detail_go_web"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#3a4659"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/go_to_event_information"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:sizeToFit="true" />
</LinearLayout>